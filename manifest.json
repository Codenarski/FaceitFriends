{
    "name": "Faceit Friends",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
      ],
      "permissions": [
        "storage"
      ],
      "icons": { 
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
       "128": "icons/icon128.png" 
      },
      "browser_action": {
        "default_popup": "popup.html",
        "default_title": "FaceitFriends"
      }
}